{
	"manifest_version": 2,
	"name": "Hello_World",
	"version": "1.0",
	"description": "Hello World version",
	"icons":{
		"128":"16.png"
		
	},
	"browser_action":{
		"default_icon": "16.png",
		"default_popup": "popup.html"
	},
	"permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "app/content.js"
            ]
        }
    ],
    "chrome_url_overrides" : {
        "newtab": "index.html"
      }
}